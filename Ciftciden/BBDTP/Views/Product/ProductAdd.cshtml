@using BBDTP.Models
@model Product
@{
    ViewBag.Title = "ProductAdd";
}

@using (Html.BeginForm("ProductAdd", "Product", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Stok")
    @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Kategori")
    @Html.DropDownListFor(x =>  x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    <br />
    @Html.Label("Şehir")
    @Html.DropDownListFor(x => x.CityId, (List<SelectListItem>)ViewBag.vlct, new { @class = "form-control" })
    <br />
    @Html.Label("Çiftçi")
    @Html.DropDownListFor(x => x.FarmId, (List<SelectListItem>)ViewBag.vlf, new { @class = "form-control" })
    <br /><br />
    <button class="btn btn-info">Ürün Ekle</button>
</div>
}

